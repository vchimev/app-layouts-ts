<Page
    class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu"
            android:visibility="collapsed"
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Wrap"></Label>
    </ActionBar>

    <WrapLayout id="container" class="layout-container">
    <!-- itemWidth="100" itemHeight="100" -->
        <Button text="1" width="150" height="100" backgroundColor="lightPink" tap="onTap" />
        <Button text="2" width="100" height="150" backgroundColor="lightBlue" tap="onTap" />
        <Button text="3" width="200" height="120" backgroundColor="lightGreen" tap="onTap" />
        <Button text="4" width="100" height="50"  backgroundColor="lightGray" tap="onTap" />
        <Button text="5" width="250" height="100" backgroundColor="lightYellow" tap="onTap" />
    </WrapLayout>

</Page>
