<Page
    class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu"
            android:visibility="collapsed"
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Dock"></Label>
    </ActionBar>

    <DockLayout stretchLastChild="true">
        <Button dock="Left" text="left" backgroundColor="lightPink" padding="20" />
        <Button dock="Top" text="top" backgroundColor="lightBlue" padding="20" />
        <Button dock="Right" text="right" backgroundColor="lightGreen" padding="20" />
        <Button dock="Bottom" text="bottom" backgroundColor="lightGray" padding="20" />
        <Button text="Fill" backgroundColor="lightYellow"/>
    </DockLayout>

</Page>
