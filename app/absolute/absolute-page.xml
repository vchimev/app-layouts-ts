<Page
    class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <ActionItem icon="res://navigation/menu"
            android:visibility="collapsed"
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Absolute"></Label>
    </ActionBar>

    <AbsoluteLayout id="container" class="layout-container">
        <Button text="1" left="50" top="50" height="100" width="100" backgroundColor="lightPink" tap="onTap" />
        <Button text="2" left="200" top="100" height="300" width="100" backgroundColor="lightBlue" tap="onTap" />
        <Button text="3" left="75" top="300" height="75" width="150" backgroundColor="lightGreen" tap="onTap" />
    </AbsoluteLayout>

</Page>
